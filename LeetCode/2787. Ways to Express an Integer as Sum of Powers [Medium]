#define MOD 1000000007

class Solution {
public:
    int numberOfWays(int n, int k) {
        int x, maxi = n;
        vector<vector<int>> dp(n+1, vector<int>(n+1, 0));
        for (int i=1; i<=n; i++) {
            x = pow(i, k);
            if (x<=n) dp[i][x] = 1;
            else {
                maxi = i;
                break;
            }
        }
        for (int i=maxi-1; i>=1; i--) {
            for (int j=1; j<=n; j++) {
                x = pow(i, k);
                dp[i][j] += dp[i+1][j];
                dp[i][j] %= MOD;
                if (j>=x) dp[i][j] += dp[i+1][j-x];
                dp[i][j] %= MOD;
            }
        }
        return dp[1][n];
    }
};
